# =====================================================
# BROKER FRONTEND - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =====================================================

# FIREBASE (OBLIGATORIO - usar tus credenciales reales)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app

# SEGURIDAD (OBLIGATORIO - generar valores únicos)
VITE_CSRF_SECRET=your-32-character-random-secret-here
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION=900000

# API CONFIGURATION - BROKER INTEGRATION
VITE_API_BASE_URL=https://your-api-domain.com:444
VITE_TRADING_API_URL=https://your-api-domain.com:444
VITE_BROKER_API_URL=https://your-api-domain.com:444
VITE_LOGIC_API_URL=https://localhost:8443/api

# NOTA: Copy-PAMM API ahora se accede a través del proxy en MT5Manager
# No necesita URL pública, MT5Manager redirige internamente a localhost:8080

# APLICACIÓN
VITE_APP_NAME=AGM Broker
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# DESARROLLO (OPCIONAL)
NODE_ENV=development
VITE_DEBUG_MODE=true
VITE_SHOW_PERFORMANCE_METRICS=false
VITE_ENABLE_LOGGING=true

# SUPABASE CONFIGURATION
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# MIGRATION MODE (cambiar a 'supabase' cuando estés listo para migrar)
VITE_DATABASE_PROVIDER=supabase

# CRYPTO PAYMENT API
VITE_CRYPTO_API_URL=https://your-crypto-api.com:446/api

# ✅ EMAIL SERVICE - Handled by Backend API
# Email sending is now securely handled by the backend
# Brevo API key is stored in backend .env, not frontend
VITE_SENDER_EMAIL=noreply@alphaglobalmarket.io
VITE_SENDER_NAME=Alpha Global Market

# === INTELIGENCIA ARTIFICIAL ===
# ⚠️ WARNING: API keys should not be exposed in frontend
# TODO: Move AI calls to backend API
VITE_GEMINI_API_KEY=your-gemini-api-key
VITE_GEMINI_MODEL=gemini-1.5-flash
